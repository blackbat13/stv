Ciphertext encr(z_t m, int r){ // m = message, r = randomization factor
  Ciphertext c;
  
  c.y1 = zpow( pk.a, r);
  c.y2 = zpow( pk.b, r) * m % z_order;
  
  return c;
}

z_t decr(Ciphertext &amp;c, int key){
  return (c.y2 * zpow(c.y1, -key) )%z_order;
}


